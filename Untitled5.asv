avbl_h = [0,1,2,4,6,24];
timespan = 60;
horizon = 24;
flag = 1;

power = -0.5;

seq = [];
i = 2;
for t = 0:1*timespan/60:horizon
    if t>=avbl_h(i-1) && t<avbl_h(i)
        seq = [seq; (flag==1)];
    else
        seq = [seq; (flag~=1)];
        i = i+1; 
        flag = (flag~=1);
    end
end
seq(size(seq, 1))=[];

value = seq.*power;

rr = 1;



